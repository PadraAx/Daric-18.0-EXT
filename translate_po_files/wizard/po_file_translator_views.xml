<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_po_file_translator_form" model="ir.ui.view">
            <field name="name">po.file.translator.form</field>
            <field name="model">po.file.translator</field>
            <field name="arch" type="xml">
                <form string="Translate PO File">
                    <field invisible="1" name="state"/>
                    <field invisible="1" name="filename"/>
                    <group invisible="state not in ['upload']" string="Export Settings">
                        <field name="source_lang"/>
                        <field name="target_lang"/>
                        <field filename="filename" name="data"/>
                        <field name="overwrite" widget="boolean_toggle"/>
                    </group>
                    <div invisible="state not in ['download']">
                        <h2>
                            Translation Complete
                        </h2>
                        <p>
                            Here is the exported translation file:
                            <field filename="filename" name="new_data" readonly="1"/>
                        </p>
                        <p>
                            This file was generated using the universal
                            <strong>
                                Unicode/UTF-8
                            </strong>
                            file encoding.
                            Please be sure to view and edit using the same encoding.
                        </p>
                        <ul>
                            <li>
                                PO(T) format: you should edit it with a PO editor such as
                                <a href="http://www.poedit.net/" target="_blank">
                                    POEdit
                                </a>
                                , or your preferred text editor
                            </li>
                        </ul>
                    </div>
                    <footer invisible="state not in ['upload']">
                        <button class="btn-primary" data-hotkey="q" name="action_translate_po_file" string="Translate" type="object"/>
                        <button class="btn-secondary" data-hotkey="z" special="cancel" string="Cancel" type="object"/>
                    </footer>
                    <footer invisible="state not in ['download']">
                        <button class="btn-primary" data-hotkey="z" special="cancel" string="Close" type="object"/>
                    </footer>
                </form></field>
        </record>
        <record id="action_po_file_translator" model="ir.actions.act_window">
            <field name="name">Translate PO File</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">po.file.translator</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem action="action_po_file_translator" id="menu_po_file_translator" name="Translate PO File" parent="base.menu_translation" sequence="100"/>
    </data>
</odoo>
