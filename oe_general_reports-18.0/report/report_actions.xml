<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_saleorder_informal" model="ir.actions.report">
        <field name="name">Informal Quotation / Order - A4 Landscape</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">oe_general_reports.report_saleorder_informal</field>
        <field name="report_file">oe_general_reports.report_saleorder_informal</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Informal Quotation - A4 Landscape - %s' % (object.name)) or 'Informal Order - A4 Landscape - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="oe_general_reports.paperformat_A4_landscape"/>
    </record>
    <record id="action_report_saleorder_formal" model="ir.actions.report">
        <field name="name">Formal Quotation / Order - A4 Landscape</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">oe_general_reports.report_saleorder_formal</field>
        <field name="report_file">oe_general_reports.report_saleorder_formal</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Formal Quotation - A4 Landscape - %s' % (object.name)) or 'Formal Order - A4 Landscape - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="oe_general_reports.paperformat_A4_landscape"/>
    </record>
    <record id="action_report_account_invoices" model="ir.actions.report">
        <field name="name">Invoice - A4 Landscape</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">oe_general_reports.report_invoice_with_payments</field>
        <field name="report_file">oe_general_reports.report_invoice_with_payments</field>
        <field name="print_report_name">(object._get_report_base_filename())</field>
        <field name="attachment"/>
        <field name="binding_model_id" ref="model_account_move"/>
        <field name="binding_type">report</field>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice')),
(4, ref('account.group_account_readonly'))]"/>
        <field name="paperformat_id" ref="oe_general_reports.paperformat_A4_landscape"/>
    </record>
    <record id="action_report_account_invoices_without_payment" model="ir.actions.report">
        <field name="name">Invoices without Payment - A4 Landscape</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">oe_general_reports.report_invoice</field>
        <field name="report_file">oe_general_reports.report_invoice</field>
        <field name="print_report_name">(object._get_report_base_filename())</field>
        <field name="attachment"/>
        <field name="binding_model_id" ref="model_account_move"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="oe_general_reports.paperformat_A4_landscape"/>
    </record>
</odoo>