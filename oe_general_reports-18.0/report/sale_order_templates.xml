                        </tr> -->
                        </tfoot>
                    </table>
                    <div t-if="doc.note" class="description mt-3">
                        <strong class="d-inline-block mb-2">توضیحات: </strong>
                        <t t-esc="doc.note"/>
                    </div>
                </div>
            </t>
        </template>
    </data>
